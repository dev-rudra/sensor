<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TableLayout
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:stretchColumns="*"
            >

        <TextView
            android:id="@+id/mainView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:background="#CFE3E2"
            android:lineSpacingMultiplier="2.5"
            android:lineSpacingExtra="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accelerometer Data:"
            android:padding="20dp"
            android:textColor="#fff"
            android:textFontWeight="700"/>

        <TableRow
            android:id="@+id/acc"
            android:background="#E8F8FF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/view1-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/view1-2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                android:id="@+id/view1-3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proximity Sensor Data:"
            android:textColor="#fff"
            android:textFontWeight="700"
            android:paddingTop="20dp"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/proxView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFEB3B"
            android:paddingLeft="20dp"
            android:paddingTop="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gravity Sensor Data:"
            android:textColor="#fff"
            android:textFontWeight="700"
            android:padding="20dp"/>

        <TableRow
            android:id="@+id/gravity"
            android:background="#E8F8FF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/view3-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/view3-2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                android:id="@+id/view3-3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step Sensor Data:"
            android:textFontWeight="700"
            android:textColor="#fff"
            android:paddingTop="20dp"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/stepView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FFEB3B"
            android:paddingLeft="20dp"
            android:paddingTop="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Magnetic Sensor Data:"
            android:textFontWeight="700"
            android:textColor="#fff"
            android:padding="20dp"/>

        <TableRow
            android:id="@+id/mag"
            android:background="#E8F8FF"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/view5-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <TextView
                android:id="@+id/view5-2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <TextView
                android:id="@+id/view5-3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
        </TableRow>

    </TableLayout>

    </LinearLayout>
</ScrollView>